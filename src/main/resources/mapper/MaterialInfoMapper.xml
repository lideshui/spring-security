<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cps.material.mapper.MaterialInfoMapper">

    <!--手动映射1-->
    <resultMap id="MaterialInfoResultMap" type="com.cps.material.model.MaterialInfo">
        <id property="id" column="id" />
        <result property="number" column="number" />
            <result property="description" column="description" />
    </resultMap>

    <select id="selectMaterialListByExcel" resultMap="MaterialInfoResultMap">
        SELECT
        id, number, description
        FROM
        material_info
        WHERE
        1 = 1
        <if test="productNameList != null and productNameList.size() > 0">
            AND (
            <foreach collection="productNameList" item="productName" separator="OR">
                description LIKE CONCAT('%', #{productName}, '%')
            </foreach>
            )
        </if>
        ORDER BY id
    </select>
</mapper>